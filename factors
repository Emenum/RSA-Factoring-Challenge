#!/usr/bin/python3

import sys
import time


def factorize(num):
    '''Takes a number as input.
    Args:
        num: an input integer.
        Return: A tuple of two factors if the number is composite.
                None if the number is prime.
    '''
    for i in range(2, int(num**0.5)+1):
        if num % i == 0:
            return (i, num//i)
    return None


if __name__ == "__main__":
    '''Reads the input file.
    '''
    if len(sys.argv) != 2:
        print("Usage: factors <file>")
        exit()

    input_file = sys.argv[1]

    try:
        with open(input_file, 'r') as f:
            lines = f.readlines()
    except FileNotFoundError:
        print("Oops! File not found.")
        exit()

    start_time = time.time()

    '''Loops over each line (each line should contain one natural number),
        and calls the factorize function on each number.
        If factorize returns a tuple of factors,
        it prints the factorization in the desired format.
        If factorize returns None, it prints a message indicating the number is prime.
    '''
    for line in lines:
        num = int(line.strip())
        factors = factorize(num)
        if factors:
            print(f"{num} factors into {factors[0]} and {factors[1]}")
        else:
            print(f"{num} is a prime number!")

        '''If the elapsed time exceeds 5 seconds,
            the program exits with a message about exceeding the time limit.
        '''
        if time.time() - start_time > 5:
            print("Oops! Time limit exceeded.")
            exit()

